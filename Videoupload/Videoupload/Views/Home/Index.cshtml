@{
    ViewData["Title"] = "Video Catalouge";
}
<div class="container-fluid m-3">
    <div class="row">
        <ul class="nav nav-pills" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-Catalouge-tab" data-bs-toggle="pill" data-bs-target="#pills-Catalouge" type="button" role="tab" aria-controls="pills-Catalouge" aria-selected="true">Catalouge</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-Upload-tab" data-bs-toggle="pill" data-bs-target="#pills-Upload" type="button" role="tab" aria-controls="pills-Upload" aria-selected="false">Upload</button>
            </li>

        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-Catalouge" role="tabpanel" aria-labelledby="pills-Catalouge-tab">
                <div class="col-10" id="divvideos" >
                    <video width="320" height="240" autoplay id="videofileurl" controls>
                        <source src="https://localhost:7132/api/Files/GetVideoByName?filename=cb-coding-challenge-example-demo.mp4" type="video/mp4" >                       
                        
                    </video>
                    <table id="videoTable" class="table table-bordered m-3">
                        <thead><tr><th>Video FileName</th><th>FileSize</th></tr></thead>
                        <tbody></tbody>


  </table>
                </div>
            </div>
            <div class="tab-pane fade" id="pills-Upload" role="tabpanel" aria-labelledby="pills-Upload-tab">
                <div class="col-12">
                    <div class="col-12 mx-auto m-3 bg-info text-white">
                        <span>Choose MP4 files to upload to video catalouge</span>
                    </div>
                    <div class="row mt-2">
                        <input type="file" class="custom-file-input custom-file-input-lg" id="fileupload" multiple accept=".mp4">
                    </div>
                    <div class="mt-2">
                        <button type="button" class="btn btn-primary sm" id="btnUpload">Upload</button>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<script src="~/scripts/videocatalouge.js"></script>

